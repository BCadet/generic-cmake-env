// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.241.1/containers/docker-existing-dockerfile
{
	"name": "generic-cmake-env-devcontainer",
    "dockerComposeFile": ["docker-compose.yml", "../hardware/generic-cmake-env-hardware1.yml"],
	"service": "vscode",
    "workspaceFolder": "/${localWorkspaceFolderBasename}",
    "customizations": {
        "vscode": {
            "settings": {
                "extensions.autoUpdate": false,
                "extensions.autoCheckUpdates": false
            },
            "extensions": [
                "ms-vscode.cpptools-extension-pack",
                "augustocdias.tasks-shell-input",
                "ms-vscode.cpptools-themes",
                "marus25.cortex-debug"
            ],
        },
    },
    
    "remoteUser": "builder",
    "initializeCommand": [
        "./.devcontainer/initializeCommand.sh", "${localWorkspaceFolder}", "${localWorkspaceFolderBasename}"
    ],

    // mount the user .ssh folder to the container to allow git fetch/push
	"mounts": [ "source=${localEnv:HOME}/.ssh,target=/home/builder/.ssh,type=bind" ],
}
